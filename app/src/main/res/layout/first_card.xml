<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.Light"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/home_layout_card_more_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/first_card_background"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/home_layout_first_card_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/home_first_card_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_first_card_personal_stats"
                    style="@style/CaptionMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/first_card_personal_stats"
                    android:textColor="@color/white" />
            </LinearLayout>

            <Button
                android:id="@+id/home_first_card_more_about"
                style="@style/BUTTON"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/corner_radius_button_card_red"
                android:paddingHorizontal="8dp"
                android:text="@string/first_card_more_about"
                android:textColor="@color/white"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/home_first_card_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/home_first_card_bottom_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_first_card_win"
                        style="@style/Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/first_card_win"
                        android:textColor="@color/white_80" />

                    <TextView
                        android:id="@+id/home_first_card_win_count"
                        style="@style/Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/first_card_zero"
                        android:textColor="@color/white" />
                </LinearLayout>

                <View
                    android:id="@+id/home_first_card_separator"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white_32" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_first_card_bottom_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_first_card_lose"
                    style="@style/Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/first_card_lose"
                    android:textColor="@color/white_80" />

                <TextView
                    android:id="@+id/home_first_card_lose_count"
                    style="@style/Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/first_card_zero"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>