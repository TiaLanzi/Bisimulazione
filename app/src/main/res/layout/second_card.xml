<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/second_card"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/home_second_card_active_players_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/second_card_background"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/home_second_card_active_players_layout_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_second_card_active_players"
                style="@style/CaptionMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/second_card_active_players"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_second_card_active_players_layout_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/home_second_card_active_players_layout_bottom_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_second_card_active_players_bottom"
                        style="@style/Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/second_card_active_players_count"
                        android:textColor="@color/white_80" />

                    <TextView
                        android:id="@+id/home_second_card_active_players_count"
                        style="@style/Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/second_card_zero"
                        android:textColor="@color/white" />
                </LinearLayout>

                <View
                    android:id="@+id/home_second_card_separator"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white_32" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_second_card_active_players_bottom_right_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_second_card_rooms"
                    style="@style/Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/second_card_rooms_count"
                    android:textColor="@color/white_80" />

                <TextView
                    android:id="@+id/home_second_card_rooms_count"
                    style="@style/Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/first_card_zero"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>